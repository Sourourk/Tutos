<?php
$connect=mysql_connect("localhost","adminZXksyDl","fyCzq54sfaLZ") or die ("impossible de connecter à la base de donnée");
mysql_select_db("gestionetudiants") or die("Erreur de selection de la requete");
$resultat = mysql_query("SELECT * FROM etudiant");
if(mysql_num_rows($resultat) > 0) {
    $outputs["etudiants"] = array();
 
    while ($row = mysql_fetch_array($resultat)) {
        $etudiant = array();
        $etudiant["cin"] = $row["cin"];
        $etudiant["nom"] = $row["nom"];
        $etudiant["prenom"] = $row["prenom"];
        $etudiant["adresse"] = $row["adresse"];
        $etudiant["email"] = $row["email"];
         array_push($outputs["etudiants"], $etudiant);
    }
    // success
    $outputs["success"] = 1;
     echo json_encode($outputs);
} else {
    $outputs["success"] = 0;
    $outputs["message"] = "Pas d'étudiants";
 
    // echo no users JSON
    echo json_encode($outputs);
}
?>
